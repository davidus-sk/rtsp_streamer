[Unit]
Description=Launch and keep running the RTSP->WebRTC streamers
After=network.target

[Service]
Type=simple
WorkingDirectory=/app/rtsp_streamer
ExecStart=/app/rtsp_streamer/scripts/stream_manager.py
Restart=always
RestartSec=1
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target
